<section class="container" ng-controller="LoginController">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
            <h1>Login</h1>
        </div>
    </div>
    <form>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 form-group">
                <label>Email Address</label>
                <input type="text" class="form-control" ng-model="user.email" />
            </div>
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 form-group">
                <label>Password</label>
                <input type="password" class="form-control" ng-model="user.password" />
            </div>
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 checkbox text-right">
                <label>
                    <input type="checkbox"
                        ng-model="user.remember"
                        ng-true-value="true"
                        ng-false-value="false" />Remember Me
                </label>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 text-right">
                <button type="submit" class="btn btn-success"
                ng-disabled="processing"
                ng-click="login()">Login</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
            <p><a href="/forgot">Forgot Password</a></p>
        </div>
    </div>
</section>
<script type="text/javascript" src="/app/services/UserService.js"></script>
<script type="text/javascript" src="/app/controllers/Login.js"></script>